{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "esnext",
    "strict": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "importHelpers": true,
    "noImplicitThis": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@r/*": ["resources/*"]
    }
  },
  "include": [
    "resources/**/*.ts",
    "resources/**/*.vue"
  ],
  "exclude": [ "node_modules" ]
}
