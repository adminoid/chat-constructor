{
  "types": [
    "jest"
  ],
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "importHelpers": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "paths": {
      "@r/*": ["/resources/*"]
    }
  },
  "include": [
    "resources/**/*.vue",
    "resources/**/*.ts",
    "tests/vue/**/*.spec.js"
  ],
  "exclude": [ "node_modules" ],
  "files": ["resources/customer/ts/types/ts-shim.d.ts"]
}
