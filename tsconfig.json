{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "importHelpers": true,
    "noImplicitThis": true
  },
  "include": [
    "resources/customer/ts/**/*.ts",
    "resources/customer/ts/**/*.vue"
  ],
  "exclude": [ "node_modules" ]
}
